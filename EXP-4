#include <stdio.h>

int main() {
    int n, i, j;
    int burst[20], waiting[20], turnaround[20], pid[20];
    int totalWT = 0, totalTAT = 0;
    int temp;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    printf("\nEnter Burst Time for each process:\n");
    for (i = 0; i < n; i++) {
        printf("Process P%d: ", i + 1);
        scanf("%d", &burst[i]);
        pid[i] = i + 1;   // Process ID
    }

    // Sort processes based on burst time (SJF)
    for (i = 0; i < n - 1; i++) {
        for (j = i + 1; j < n; j++) {
            if (burst[i] > burst[j]) {
                temp = burst[i];
                burst[i] = burst[j];
                burst[j] = temp;

                temp = pid[i];
                pid[i] = pid[j];
                pid[j] = temp;
            }
        }
    }

    // Waiting time for first process
    waiting[0] = 0;

    // Calculate waiting time
